@section Styles {
    <link rel="stylesheet" href="~/asset/css/Budget.css?v=@DateTime.Now.Ticks" />
}
@using System.Security.Claims

<div id="main-wrapper">
    <div class="header1">

        <div class="content-body">
            <div class="container">
                <!-- Page Title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title">
                            <div class="row align-items-center justify-content-between">
                                <div class="col-xl-4">
                                    <div class="page-title-content">
                                        <div class="left">
                                            <h3>Budgets</h3>
                                            <p class="mb-2">Welcome Ekash Finance Management</p>
                                        </div>
                                        <div class="breadcrumbs">
                                            <a href="#">Home</a>
                                            <span> / </span>
                                            <a href="#">Budgets</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Budgets Tab -->
                <div class="budgets-tab">
                    <div class="row g-0">

                        <!-- LEFT SIDEBAR - Budget Navigation -->
                        <div class="col-xl-3">
                            <div class="nav d-block w-100">
                                <div class="row">
                                    <!-- Budgets will be loaded here dynamically by JavaScript -->
                                    <!-- Add New Budget Button (Always visible) -->

                                    <div class="add-budgets-link" onclick="openAddBudgetModal()">
                                        <div class="budgets-nav-text">
                                            <h3 class="budgets-nav-title">Add new budget</h3>
                                        </div>
                                        <div class="add-link-image">
                                            <span><img src="/asset/img/more.png" alt=""></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Hidden UserID for JavaScript -->
                            <input type="hidden" id="userIdHidden" value="@User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier)" />

                            <!-- Add New Budget Modal -->
                            <div class="modal fade" id="addBudgetModal" tabindex="-1" aria-labelledby="addBudgetModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="addBudgetModalLabel">Thêm Ngân Sách Mới</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                        </div>

                                        <div class="modal-body">
                                            <form id="addBudgetForm">
                                                <!-- Category Picker -->
                                                <div class="mb-3">
                                                    <label class="form-label">Categories</label>
                                                    <div id="categoryPickerToggle" class="form-control d-flex justify-content-between align-items-center" style="cursor:pointer;">
                                                        <span id="selectedCategoryPreview" class="text-muted">Chọn categories...</span>
                                                        <i class="fi fi-rr-angle-small-down ms-2"></i>
                                                    </div>

                                                    <div id="categoryPickerList" class="border rounded mt-2 p-2" style="display:none; max-height:160px; overflow-y:auto;">
                                                        <div id="categoryPickerContainer" class="d-flex flex-wrap gap-2"></div>
                                                    </div>

                                                    <input type="hidden" id="selectedCategoryID" name="CategoryID">
                                                </div>

                                                <!-- Budget Amount -->
                                                <div class="mb-3">
                                                    <label for="budgetAmountInput" class="form-label">Số tiền</label>
                                                    <input type="number" class="form-control" id="budgetAmountInput" placeholder="0" required>
                                                </div>

                                                <!-- Date Range -->
                                                <div class="mb-3">
                                                    <label class="form-label">Khoảng thời gian</label>

                                                    <!-- Quick Range Buttons -->
                                                    <div class="btn-group w-100 mb-2" role="group" aria-label="Quick ranges">
                                                        <button type="button" class="btn btn-outline-primary range-btn" data-range="7">1 Tuần</button>
                                                        <button type="button" class="btn btn-outline-primary range-btn" data-range="30">1 Tháng</button>
                                                        <button type="button" class="btn btn-outline-primary range-btn" data-range="90">3 Tháng</button>
                                                        <button type="button" class="btn btn-outline-primary range-btn" data-range="365">1 Năm</button>
                                                    </div>

                                                    <!-- Date Inputs -->
                                                    <div class="row">
                                                        <div class="col">
                                                            <label for="budgetStartDateInput" class="form-label small">Từ ngày</label>
                                                            <input type="date" class="form-control" id="budgetStartDateInput" name="StartDate" required>
                                                        </div>
                                                        <div class="col">
                                                            <label for="budgetEndDateInput" class="form-label small">Đến ngày</label>
                                                            <input type="date" class="form-control" id="budgetEndDateInput" name="EndDate" required>
                                                        </div>
                                                    </div>
                                                    <div class="form-check mt-3">
                                                        <input class="form-check-input" type="checkbox" id="recurringCheckbox" name="IsRecurring" />
                                                        <label class="form-check-label" for="recurringCheckbox">
                                                            Lặp lại theo chu kỳ
                                                        </label>
                                                    </div>

                                                </div>
                                            </form>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                            <button type="submit" class="btn btn-primary" form="addBudgetForm">Lưu Ngân Sách</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- RIGHT CONTENT - Budget Details Tabs -->
                        <div class="col-xl-9">
                            <div class="tab-content budgets-tab-content">
                                <!-- Tab panes will be loaded here dynamically by JavaScript -->
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script src="~/asset/js/Icons.js"></script>
<script src="~/asset/js/Budget.js"></script>