<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Expense Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @* css *@
    <link rel="stylesheet" href="~/asset/css/LayOutAdmin.css">
    
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="">
        <!-- Sidebar -->
        <div class="sidebar sidebar-width">
            <div class="sidebar-logo">
                <div class="logo-fallback">
                    <i class="bi bi-wallet2"></i>
                    <h4>EXPENSE<br>MANAGER</h4>
                </div>
            </div>

            <hr>

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-controller="DashBoardAD" asp-action="Index" class="nav-link">
                        <i class="bi bi-grid me-2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Users" asp-action="Index" class="nav-link">
                        <i class="bi bi-people me-2"></i>
                        <span>Users</span>
                        <span class="nav-badge">24</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Category" asp-action="Index" class="nav-link">
                        <i class="bi bi-wallet2 me-2"></i>
                        <span>Category</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Support" asp-action="Index" class="nav-link">
                        <i class="bi bi-life-preserver me-2"></i>
                        <span>Support/Ticket</span>
                        <span class="nav-badge">3</span>
                    </a>
                </li>
            </ul>

            <hr>

            <div class="dropdown dropdown-padding">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown">
                    <img src="https://ui-avatars.com/api/?name=Admin&background=4CAF50&color=fff&size=40&bold=true" alt="Admin" width="40" height="40" class="rounded-circle me-3">
                    <div class="admin-info">
                        <span class="admin-name">Administrator</span>
                        <span class="admin-role">System Admin</span>
                    </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow dropdown-menu-custom">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person-circle me-2"></i>Profile</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Sign out</a></li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Page Header -->
            <div class="page-header">
                <div>
                    <h2 class="page-title">
                        <i class="@ViewData["Icon"]"></i> @ViewData["Title"]
                    </h2>
                    <p class="page-subtitle">@ViewData["Subtitle"]</p>
                </div>
                <div class="page-date">
                    <i class="bi bi-calendar3"></i> <span id="currentDate"></span>
                </div>
            </div>

            <!-- Content từ các trang con -->
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/echarts@5.4.3/dist/echarts.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/asset/js/LayoutAdmin.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>