@{
    ViewData["Title"] = "User";
    ViewData["Subtitle"] = "Welcome back, Administrator!";
    ViewData["Icon"] = "bi bi-person";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@model QuanLyChiTieu_WebApp.ViewModels.UserManagementViewModel

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">User Management</h5>
                            <p class="text-muted mb-0">Manage all system users and their accounts</p>
                        </div>
                        <div class="d-flex gap-2">
                            <input type="text" class="form-control" placeholder="Search users..." id="searchInput" style="width: 250px;">
                            <button class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Add User
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                <i class="bi bi-people-fill text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Users</h6>
                            <h3 class="mb-0">@Model.TotalUsers</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-success bg-opacity-10 p-3">
                                <i class="bi bi-check-circle-fill text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Active Users</h6>
                            <h3 class="mb-0">@Model.ActiveUsers</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-danger bg-opacity-10 p-3">
                                <i class="bi bi-x-circle-fill text-danger fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Blocked Users</h6>
                         <h3 class="mb-0">@Model.BlockedUsers</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-info bg-opacity-10 p-3">
                                <i class="bi bi-shield-check text-info fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Administrators</h6>
                            <h3 class="mb-0">@Model.AdminUsers</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle" id="usersTable">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 5%;">#</th>
                                    <th style="width: 20%;">User</th>
                                    <th style="width: 20%;">Email</th>
                                    <th style="width: 10%;">Role</th>
                                    <th style="width: 15%;">Created Date</th>
                                    <th style="width: 15%;">Last Login</th>
                                    <th style="width: 10%;">Status</th>
                                    <th style="width: 5%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 1;
                                }
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(user.AvatarUrl))
                                                {
                                                    <img src="@user.AvatarUrl" alt="Avatar" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="rounded-circle bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                                        <i class="bi bi-person-fill text-secondary"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <div class="fw-semibold">@(user.FullName ?? "N/A")</div>
                                                    <small class="text-muted">ID: @user.UserID.Substring(0, Math.Min(8, user.UserID.Length))</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <i class="bi bi-envelope me-2 text-muted"></i>@user.Email
                                        </td>
                                        <td>
                                            @if (user.Role == "Admin")
                                            {
                                                <span class="badge bg-primary rounded-pill">
                                                    <i class="bi bi-shield-fill me-1"></i>Admin
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary rounded-pill">
                                                    <i class="bi bi-person-fill me-1"></i>User
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <i class="bi bi-calendar-plus me-2 text-muted"></i>
                                            @user.CreatedAt.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @if (user.LastLogin.HasValue)
                                            {
                                                <i class="bi bi-clock-history me-2 text-muted"></i>
                                                @user.LastLogin.Value.ToString("dd/MM/yyyy HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Never logged in</span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success rounded-pill">
                                                    <i class="bi bi-check-circle me-1"></i>Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger rounded-pill">
                                                    <i class="bi bi-x-circle me-1"></i>Blocked
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("Details", "UserAD", new { id = user.UserID })">
                                                            <i class="bi bi-eye me-2"></i>View Details
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("Edit", "UserAD", new { id = user.UserID })">
                                                            <i class="bi bi-pencil me-2"></i>Edit
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    @if (user.IsActive)
                                                    {
                                                        <li>
                                                            <a class="dropdown-item text-danger" href="#" onclick="toggleUserStatus('@user.UserID', false)">
                                                                <i class="bi bi-lock-fill me-2"></i>Block User
                                                            </a>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <a class="dropdown-item text-success" href="#" onclick="toggleUserStatus('@user.UserID', true)">
                                                                <i class="bi bi-unlock-fill me-2"></i>Unblock User
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .table tbody tr {
        transition: background-color 0.2s;
    }

        .table tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }

    .dropdown-menu {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
</style>

<!-- JavaScript for Search and Toggle Status -->
<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function() {
        const searchValue = this.value.toLowerCase();
        const tableRows = document.querySelectorAll('#usersTable tbody tr');

        tableRows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchValue) ? '' : 'none';
        });
    });

    // Toggle user status (block/unblock)
    function toggleUserStatus(userId, activate) {
        const action = activate ? 'unblock' : 'block';

        if (confirm(`Are you sure you want to ${action} this user?`)) {
            // AJAX call to update user status
            fetch(`/UserAD/ToggleStatus/${userId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({ isActive: activate })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while updating user status.');
            });
        }
    }
</script>
@section Scripts {
    <!-- Bootstrap JavaScript - BẮT BUỘC để dropdown hoạt động -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Khởi tạo tất cả dropdowns
        document.addEventListener('DOMContentLoaded', function() {
            var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
            var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                return new bootstrap.Dropdown(dropdownToggleEl);
            });
            console.log('Dropdowns initialized:', dropdownList.length);
        });
    </script>
}
