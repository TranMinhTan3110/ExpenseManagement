@using System.Security.Claims
@{
    ViewData["Title"] = "Quản lí người dùng";
    ViewData["Subtitle"] = $"Chào mừng trở lại, {User.FindFirstValue(ClaimTypes.Name)}!";
    ViewData["Icon"] = "bi bi-person";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@model QuanLyChiTieu_WebApp.ViewModels.UserManagementViewModel

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <div>
                            <h5 class="mb-1">Quản lí người dùng</h5>
                            <p class="text-muted mb-0">quản lý tất cả người dùng và tài khoản của họ</p>
                        </div>
                        <div class="d-flex gap-2 flex-wrap">
                            <!-- Search -->
                            <form method="get" asp-action="Index" class="d-flex gap-2">
                                <input type="text" class="form-control" placeholder="Tìm kiếm người dùng..."
                                       name="searchTerm" value="@Model.SearchTerm" style="width: 200px;">

                                <!-- Role Filter -->
                                <select class="form-select" name="roleFilter" style="width: 120px;">
                                    <option value="">Vai trò</option>
                                    <option value="Admin" selected="@(Model.RoleFilter == "Admin")">Quản trị</option>
                                    <option value="User" selected="@(Model.RoleFilter == "User")">Người dùng</option>
                                </select>

                                <!-- Status Filter -->
                                <select class="form-select" name="statusFilter" style="width: 120px;">
                                    <option value="">Trạng thái</option>
                                    <option value="Active" selected="@(Model.StatusFilter == "Active")">Hoạt động</option>
                                    <option value="Blocked" selected="@(Model.StatusFilter == "Blocked")">Chặn</option>
                                </select>

                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i>
                                </button>

                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-clockwise"></i>
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                <i class="bi bi-people-fill text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Tổng người dùng</h6>
                            <h3 class="mb-0">@Model.TotalUsers</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-success bg-opacity-10 p-3">
                                <i class="bi bi-check-circle-fill text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Số người dùng hoạt động</h6>
                            <h3 class="mb-0">@Model.ActiveUsers</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-danger bg-opacity-10 p-3">
                                <i class="bi bi-x-circle-fill text-danger fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Số người dùng bị chặn</h6>
                            <h3 class="mb-0">@Model.BlockedUsers</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle bg-info bg-opacity-10 p-3">
                                <i class="bi bi-shield-check text-info fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Số quản trị viên</h6>
                            <h3 class="mb-0">@Model.AdminUsers</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <!-- Hiển thị thông tin phân trang -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="text-muted">
                            Cho thấy từ @((Model.Users.PageIndex - 1) * Model.Users.PageSize + 1)
                            đến @(Math.Min(Model.Users.PageIndex * Model.Users.PageSize, Model.Users.TotalCount))
                            trong tổng số @Model.Users.TotalCount users
                        </div>
                        <div class="text-muted">
                            Trang @Model.Users.PageIndex của @Model.Users.TotalPages
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 5%;">#</th>
                                    <th style="width: 20%;">Người dùng</th>
                                    <th style="width: 20%;">Email</th>
                                    <th style="width: 10%;">Vai trò</th>
                                    <th style="width: 15%;">Ngày tạo</th>
                                    <th style="width: 15%;">Đăng nhập cuối</th>
                                    <th style="width: 10%;">Trạng thái</th>
                                    <th style="width: 5%;">Điều khiển</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = (Model.Users.PageIndex - 1) * Model.Users.PageSize + 1;
                                }
                                @foreach (var user in Model.Users.Items)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(user.AvatarUrl))
                                                {
                                                    <img src="@user.AvatarUrl" alt="Avatar" class="rounded-circle me-2"
                                                         style="width: 40px; height: 40px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="rounded-circle bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center me-2"
                                                         style="width: 40px; height: 40px;">
                                                        <i class="bi bi-person-fill text-secondary"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <div class="fw-semibold">@(user.FullName ?? "N/A")</div>
                                                    <small class="text-muted">ID: @user.UserID.Substring(0, Math.Min(8, user.UserID.Length))</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @user.Email
                                        </td>
                                        <td>
                                            @if (user.Role == "Admin")
                                            {
                                                <span class="badge bg-primary rounded-pill">
                                                    <i class="bi bi-shield-fill me-1"></i>Quản trị
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary rounded-pill">
                                                    <i class="bi bi-person-fill me-1"></i>Người dùng
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <i class="bi bi-calendar-plus me-2 text-muted"></i>
                                            @user.CreatedAt.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @if (user.LastLogin.HasValue)
                                            {
                                                <i class="bi bi-clock-history me-2 text-muted"></i>
                                                @user.LastLogin.Value.ToString("dd/MM/yyyy HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Chưa bao giờ đăng nhập</span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success rounded-pill">
                                                    <i class="bi bi-check-circle me-1"></i>Hoạt động
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger rounded-pill">
                                                    <i class="bi bi-x-circle me-1"></i>Chặn
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><hr class="dropdown-divider"></li>
                                                    @if (user.IsActive)
                                                    {
                                                        <li>
                                                            <a class="dropdown-item text-danger" href="#" onclick="toggleUserStatus('@user.UserID', false)">
                                                                <i class="bi bi-lock-fill me-2"></i>Chặn người dùng
                                                            </a>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <a class="dropdown-item text-success" href="#" onclick="toggleUserStatus('@user.UserID', true)">
                                                                <i class="bi bi-unlock-fill me-2"></i>Gỡ chặn
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination Controls -->
                    @if (Model.Users.TotalPages > 1)
                    {
                        <nav aria-label="User pagination" class="mt-4">
                            <ul class="pagination pagination-sm justify-content-center mb-0">
                                <!-- Previous Button -->
                                <li class="page-item @(Model.Users.HasPreviousPage ? "" : "disabled")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-pageIndex="@(Model.Users.PageIndex - 1)"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-roleFilter="@Model.RoleFilter"
                                       asp-route-statusFilter="@Model.StatusFilter">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>

                                @{
                                    int startPage = Math.Max(1, Model.Users.PageIndex - 2);
                                    int endPage = Math.Min(Model.Users.TotalPages, Model.Users.PageIndex + 2);
                                }

                                <!-- First Page -->
                                @if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-pageIndex="1"
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-roleFilter="@Model.RoleFilter"
                                           asp-route-statusFilter="@Model.StatusFilter">
                                            1
                                        </a>
                                    </li>
                                    @if (startPage > 2)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                }

                                <!-- Page Numbers -->
                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == Model.Users.PageIndex ? "active" : "")">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-pageIndex="@i"
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-roleFilter="@Model.RoleFilter"
                                           asp-route-statusFilter="@Model.StatusFilter">
                                            @i
                                        </a>
                                    </li>
                                }

                                <!-- Last Page -->
                                @if (endPage < Model.Users.TotalPages)
                                {
                                    @if (endPage < Model.Users.TotalPages - 1)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-pageIndex="@Model.Users.TotalPages"
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-roleFilter="@Model.RoleFilter"
                                           asp-route-statusFilter="@Model.StatusFilter">
                                            @Model.Users.TotalPages
                                        </a>
                                    </li>
                                }

                                <!-- Next Button -->
                                <li class="page-item @(Model.Users.HasNextPage ? "" : "disabled")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-pageIndex="@(Model.Users.PageIndex + 1)"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-roleFilter="@Model.RoleFilter"
                                       asp-route-statusFilter="@Model.StatusFilter">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .table tbody tr {
        transition: background-color 0.2s;
    }

        .table tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }

    .dropdown-menu {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .pagination .page-link {
        color: #2563eb;
    }

    .pagination .page-item.active .page-link {
        background-color: #2563eb;
        border-color: #2563eb;
    }
</style>

<!-- JavaScript for Toggle Status -->
<!-- JavaScript for Toggle Status -->
<script>
    function toggleUserStatus(userId, activate) {
        const action = activate ? 'gỡ chặn' : 'chặn';
        const actionTitle = activate ? 'Gỡ chặn người dùng?' : 'Chặn người dùng?';
        const actionText = activate ? 'Người dùng này sẽ được phép truy cập lại hệ thống' : 'Người dùng này sẽ không thể đăng nhập vào hệ thống';

        Swal.fire({
            title: actionTitle,
            text: actionText,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: activate ? '#28a745' : '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: activate ? '<i class="bi bi-unlock-fill me-1"></i> Gỡ chặn' : '<i class="bi bi-lock-fill me-1"></i> Chặn',
            cancelButtonText: '<i class="bi bi-x-circle me-1"></i> Hủy',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                // Hiển thị loading
                Swal.fire({
                    title: 'Đang xử lý...',
                    text: 'Vui lòng đợi trong giây lát',
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                fetch(`/UserAD/ToggleStatus/${userId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ isActive: activate })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Thành công!',
                            text: activate ? 'Đã gỡ chặn người dùng thành công' : 'Đã chặn người dùng thành công',
                            confirmButtonColor: '#2563eb',
                            timer: 2000,
                            timerProgressBar: true
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi!',
                            text: data.message || 'Có lỗi xảy ra khi cập nhật trạng thái người dùng',
                            confirmButtonColor: '#2563eb'
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: 'Không thể kết nối đến máy chủ. Vui lòng thử lại sau.',
                        confirmButtonColor: '#2563eb'
                    });
                });
            }
        });
    }
</script>

@section Scripts {
    <script>
        // Khởi tạo tất cả dropdowns
        document.addEventListener('DOMContentLoaded', function() {
            var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
            var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                return new bootstrap.Dropdown(dropdownToggleEl);
            });
        });
    </script>
}